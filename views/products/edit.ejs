<% layout('layouts/boilerplate')%>
<section class="productCon">
        <div class="prodDiv">
            <div class="carouImgs">
                <div class="carou">
                    <% foundProduct.images.forEach((img, i) => {  %>
                       
                        <img src="<%= img.url%>" alt="">
                    
                    <% }) %>
                </div>
            </div>
            <div class="imageDiv">
                <div class="square">
                    <img src="<%= foundProduct.images[0].url %> " alt="">
                </div>    
                </div>
            <form action="/products/<%= foundProduct._id %>/show?_method=PUT" method="POST">
                <div class="prodInfo">
                    <!-- <h2 class="prodH1 mt-3"> </h2> -->
                    <label for="title" class="mt-3">Title</label>
                    <input type="text" id="title" class="form-control mb-3" name="product[title]" value="<%= foundProduct.title %>">
                    <!-- <p class="mb-1">By <b></b></p><br> -->
                    <label for="categories" class="form-label">Category</label>
                    <select class="form-select form-select-sm mb-3" id="categories" name="product[categories]" aria-label=".form-select-lg example" required>
                        <option value="<%= foundProduct.categories %>"><%= foundProduct.categories %></option>
                        <% for (let c = 0; c < categories.length; c++) {%>
                            <% for (const cat in categories[c]) {%>
                                 <option value="<%= cat %>"> <%= cat %> </option>
                            <% } %> 
                                        
                        <% } %> 
                    </select>
                    <hr>
                    
                    
                    <!-- <h3 class="mb-3" style="color: rgb(127, 255, 212);">$ </h3> -->
                    <div class="stock-price">
                        <label for="stock">Stock</label>
                        <input type="number" class="mb-3" id="stock" name="product[stock]" value="<%= foundProduct.stock %>">
                        <label for="price">$ Price</label>
                        <input type="number" class="mb-3" id="price" name="product[price]" value="<%= foundProduct.price %>">
                    </div>

                    <div class="desc">
                        <h5>Product description</h4>
                        <!-- <p class="mb-4"><%= foundProduct.description %></p> -->
                        <textarea class="form-control mb-4" name="product[description]" id="desc" cols="50" rows="10"><%= foundProduct.description %></textarea>
                    </div>
                    <button class="btn btn-success mb-4 btnBuy">Confirm changes</button>
                    
                </div> 
            </form>
        </div>
</section>